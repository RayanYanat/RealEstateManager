<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/list_item_main_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/list_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="zzzzzzzzzzz"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/list_item_city"
        app:layout_constraintStart_toEndOf="@id/list_item_main_pic" />

    <TextView
        android:id="@+id/list_item_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="zzzzzzzzzzzzzzzzzzzzzzzzzz"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/list_item_main_pic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="zzzzzzzzzzzzzzzzzzzzzzzzzzzz"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/list_item_main_pic"
        app:layout_constraintTop_toBottomOf="@id/list_item_city"
        />
</androidx.constraintlayout.widget.ConstraintLayout>