<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout_search_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linearLayout_beginDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bedin date" />

            <EditText
                android:id="@+id/search_begin_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autofillHints=""
                android:clickable="true"
                android:focusable="true"
                android:inputType="date"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/endDateSearch_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="end date" />

            <EditText
                android:id="@+id/search_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autofillHints=""
                android:clickable="false"
                android:focusable="true"
                android:inputType="date"
                tools:ignore="LabelFor" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/checkbox_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="point of interest :  "
            android:textColor="@color/design_default_color_on_secondary" />

        <LinearLayout
            android:id="@+id/linearLayout_checkBox1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/search_articles_arts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="arts"
                android:text="Ã©cole" />

            <CheckBox
                android:id="@+id/search_articles_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="business"
                android:text="commerce" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout_checkBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/search_articles_politics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="politics"
                android:text="parc" />

            <CheckBox
                android:id="@+id/search_articles_sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="sports"
                android:text="gare" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout_search_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linearLayout_minPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price min" />

            <EditText
                android:id="@+id/search_min_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autofillHints=""
                android:clickable="true"
                android:focusable="true"
                android:inputType="date"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_maxPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/maxPrice_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date de vente" />

            <EditText
                android:id="@+id/search_max_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autofillHints=""
                android:clickable="false"
                android:focusable="true"
                android:inputType="date"
                tools:ignore="LabelFor" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="search"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp"
        />

</LinearLayout>